Screen:

    MDBoxLayout:
        orientation: "vertical"

        MDToolbar:
            id: toolbar
            title: "Processes"
            elevation: 10
            right_action_items: [["dots-vertical", lambda x: app.filter_menu.open()]]

            # MDSpinner:
            #     active: False
            #     size_hint: None, None
            #     size: dp(35), dp(35)
            #     pos_hint: {'center_x': 0, 'center_y': .5}
            #     color: 1,1,1,1

        MDBottomNavigation:
            text_color_normal: 1, 1, 1, 1
            text_color_active: 1, 0, 1, 1

            MDBottomNavigationItem:
                name: "selection"
                text: "Selection"
                icon: "checkbox-multiple-marked-outline"

                ScrollView:
                    do_scroll_x: False
                    scroll_type: ["bars"]
                    bar_width: 10
                    bar_color: .7,.7,.7,1
                    bar_inactive_color: .7,.7,.7,5

                    MDList:
                        id: processes

                MDFloatingActionButton:
                    icon: "play"
                    md_bg_color: app.theme_cls.primary_color
                    elevation: 10
                    on_press: app.activate_tracking(self)
                    # Das ist hässlig, bitte ändern
                    pos_hint: {"center_x": .9, "center_y": .1}

            MDBottomNavigationItem:
                name: "stats"
                text: "Stats"
                icon: "chart-line"

                MDLabel:
                    text: "Stats here"
                    halign: "center"
                    walign: "center"